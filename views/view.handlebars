<div id="job-view-container" class="container">
    <div class="row text-center">
        <a class="back-link main-color" href="/">Return</a>
        <div id="img-container" class="col-md-12">
            <img src="/img/company.svg" alt="Company">
        </div>
        <div class="col-md-12">
            <h2 class="main-color">{{job.dataValues.title}}</h2>
            <p class="bold">Who they're looking for...</p>
            <p class="job-desc">{{job.dataValues.description}}</p>
            <p><span class="bold">Salary:</span> ${{job.dataValues.salary}}</p>
            <p>
                For working on <span class="bold main-color">{{job.dataValues.company}}</span> send an e-mail for <a href="mail:to{{job.dataValues.email}}">{{job.dataValues.email}}</a>
            </p>
        </div>
    </div>
</div>